<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">

    <display-name>GameVaultWebApp-DirectJDBC</display-name>

    <!-- Context Parameters for Direct JDBC Connection (used by DBUtil.initialize) -->
    <context-param>
        <param-name>db.driver</param-name>
        <param-value>com.mysql.cj.jdbc.Driver</param-value> <!-- MySQL 8+ Driver -->
        <!-- Use com.mysql.jdbc.Driver for older versions (e.g., 5.x) -->
    </context-param>
    <context-param>
        <param-name>db.url</param-name>
        <!-- !!!!USER INSTRUCTION!!!! -->
        <!-- Create database with the given name -->
        <!-- Also add your database username and password in the fields below -->
        <param-value>jdbc:mysql://localhost:3306/gamevaultdb?sslMode=DISABLED</param-value>
    </context-param>
    <context-param>
        <param-name>db.user</param-name>
        <!-- Your MySQL Username -->
        <param-value>root</param-value>
    </context-param>
    <context-param>
        <param-name>db.password</param-name>
        <!-- Your MySQL Password -->
        <param-value>1234</param-value>
    </context-param>

    <!-- Session Configuration -->
    <session-config>
        <session-timeout>30</session-timeout>
    </session-config>

    <!-- Welcome File -->
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>

    <!-- Listener -->
    <listener>
        <listener-class>gamevaultbase.listeners.AppContextListener</listener-class>
    </listener>

    <!-- Servlets and Mappings (Keep these as they were) -->
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>gamevaultbase.servlets.LoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>LogoutServlet</servlet-name>
        <servlet-class>gamevaultbase.servlets.LogoutServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LogoutServlet</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>RegisterServlet</servlet-name>
        <servlet-class>gamevaultbase.servlets.RegisterServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RegisterServlet</servlet-name>
        <url-pattern>/register</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>GamesServlet</servlet-name>
        <servlet-class>gamevaultbase.servlets.GamesServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>GamesServlet</servlet-name>
        <url-pattern>/games</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>AddToCartServlet</servlet-name>
        <servlet-class>gamevaultbase.servlets.AddToCartServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AddToCartServlet</servlet-name>
        <url-pattern>/addToCart</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ViewCartServlet</servlet-name>
        <servlet-class>gamevaultbase.servlets.ViewCartServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ViewCartServlet</servlet-name>
        <url-pattern>/viewCart</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>PlaceOrderServlet</servlet-name>
        <servlet-class>gamevaultbase.servlets.PlaceOrderServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>PlaceOrderServlet</servlet-name>
        <url-pattern>/placeOrder</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>OrdersServlet</servlet-name>
        <servlet-class>gamevaultbase.servlets.OrdersServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>OrdersServlet</servlet-name>
        <url-pattern>/orders</url-pattern>
    </servlet-mapping>

    <!-- REMOVED DataSource Resource Reference -->

    <!-- Error Page Handling (Keep as before) -->
    <error-page>
        <exception-type>java.lang.Throwable</exception-type>
        <location>/WEB-INF/jsp/error.jsp</location>
    </error-page>
    <error-page>
        <error-code>404</error-code>
        <location>/WEB-INF/jsp/notfound.jsp</location>
    </error-page>
    <error-page>
        <error-code>500</error-code>
        <location>/WEB-INF/jsp/error.jsp</location>
    </error-page>

</web-app>