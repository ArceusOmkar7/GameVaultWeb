    </servlet>
    <servlet-mapping>
        <servlet-name>RemoveFromCartServlet</servlet-name>
        <url-pattern>/removeFromCart</url-pattern>
    </servlet-mapping>
    <!-- ViewCart (Keep as is) -->
    <servlet>
        <servlet-name>ViewCartServlet</servlet-name>
        <servlet-class>gamevaultbase.servlets.ViewCartServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ViewCartServlet</servlet-name>
        <url-pattern>/viewCart</url-pattern>
    </servlet-mapping>
    <!-- PlaceOrder (Keep as is) -->
    <servlet>
        <servlet-name>PlaceOrderServlet</servlet-name>
        <servlet-class>gamevaultbase.servlets.PlaceOrderServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>PlaceOrderServlet</servlet-name>
        <url-pattern>/placeOrder</url-pattern>
    </servlet-mapping>
    <!-- Orders (Keep as is, Servlet implementation updated) -->
    <servlet>
        <servlet-name>OrdersServlet</servlet-name>
        <servlet-class>gamevaultbase.servlets.OrdersServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>OrdersServlet</servlet-name>
        <url-pattern>/orders</url-pattern>
    </servlet-mapping>
    <!-- NEW Profile Servlet -->
    <servlet>
        <servlet-name>ProfileServlet</servlet-name>
        <servlet-class>gamevaultbase.servlets.ProfileServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ProfileServlet</servlet-name>
        <url-pattern>/profile</url-pattern>
    </servlet-mapping>
    <!-- NEW Add Balance Servlet -->
    <servlet>
        <servlet-name>AddBalanceServlet</servlet-name>
        <servlet-class>gamevaultbase.servlets.AddBalanceServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AddBalanceServlet</servlet-name>
        <url-pattern>/addBalance</url-pattern>
    </servlet-mapping>
    <!-- NEW Browse Servlet -->
    <servlet>
        <servlet-name>BrowseServlet</servlet-name>
        <servlet-class>gamevaultbase.servlets.BrowseServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>BrowseServlet</servlet-name>
        <url-pattern>/browse</url-pattern>
    </servlet-mapping>
    <!-- Error Page Handling (Keep as is) -->
    <error-page>
        <exception-type>java.lang.Throwable</exception-type>
        <location>/WEB-INF/jsp/error.jsp</location>
    </error-page>
    <error-page>
        <error-code>404</error-code>
        <location>/WEB-INF/jsp/notfound.jsp</location>
    </error-page>
    <error-page>
        <error-code>500</error-code>
        <location>/WEB-INF/jsp/error.jsp</location>
    </error-page>
</web-app>
